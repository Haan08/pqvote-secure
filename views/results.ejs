<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Vote Results - PQVote</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- âœ… Navbar (same style) -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
    <div class="container">
      <a class="navbar-brand" href="/"><i class="bi bi-shield-lock-fill"></i> PQVote</a>
      <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/verify">Verify</a></li>
          <li class="nav-item"><a class="nav-link" href="/vote">Vote</a></li>
          <li class="nav-item"><a class="nav-link active" href="/results">Admin</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Chart Section -->
  <div class="container mt-5">
    <h2 class="text-center mb-4">ðŸ“Š Vote Summary</h2>

    <canvas id="voteChart" height="150"></canvas>

    <div class="text-center mt-4">
      <a href="/admin-logout" class="btn btn-outline-danger">Logout</a>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center text-muted p-3 mt-5">
    Â© 2025 PQVote | Developed by Aneesa
  </footer>

  <!-- Chart Script -->
  <script>
    fetch('/results-data')
      .then(res => res.json())
      .then(data => {
        const ctx = document.getElementById('voteChart').getContext('2d');
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: data.labels,
            datasets: [{
              label: 'Number of Votes',
              data: data.counts,
              backgroundColor: ['#007bff', '#6c757d', '#ffc107', '#28a745']
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: { display: true },
              title: {
                display: true,
                text: 'Encrypted Vote Count (Decrypted for Admin)'
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                stepSize: 1
              }
            }
          }
        });
      })
      .catch(err => {
        console.error('Failed to load results:', err);
        alert('âš  Failed to fetch results.');
      });
  </script>

</body>
</html>
